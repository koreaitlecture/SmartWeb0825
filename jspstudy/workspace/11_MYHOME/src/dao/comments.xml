<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="dao.comments">

	<insert id="insertComments" parameterType="dto.Comments">
		INSERT INTO COMMENTS
		VALUES (COMMENTS_SEQ.NEXTVAL, #{writer}, #{content}, #{bNo}, 0, SYSDATE)
	</insert>
	
	<select id="selectCommentsList" parameterType="Long" resultType="dto.Comments">
		SELECT CNO, WRITER, CONTENT, BNO, STATE, CREATED
		  FROM COMMENTS
		 WHERE BNO = #{bNo}
	</select>
	
	<update id="deleteComments" parameterType="Long" >
		UPDATE COMMENTS
		   SET STATE = -1
		 WHERE CNO = #{cNo}
	</update>

</mapper>
